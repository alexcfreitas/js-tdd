{
  "name": "js-tdd",
  "version": "1.0.0",
  "description": "Nossa biblioteca do curso de JS com TDD na pr√°tica.",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run lint && npm run test:coverage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test"
  },
  "nyc":{
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporter":["text", "html"],
    "exclude":["tests/**"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexcfreitas/js-tdd.git"
  },
  "keywords": [
    "js",
    "tdd",
    "library"
  ],
  "author": "Alexsandro Carvalho <alexcfreitas.93@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexcfreitas/js-tdd/issues"
  },
  "homepage": "https://github.com/alexcfreitas/js-tdd#readme",
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.13.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "husky": "^0.14.3",
    "mocha": "^5.0.1",
    "nyc": "^11.4.1"
  }
}
